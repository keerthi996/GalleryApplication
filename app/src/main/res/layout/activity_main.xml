<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alignmentMode="alignBounds"
        android:columnCount="3"
        android:rowCount="4"
        app:layout_constraintWidth_percent="100"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/im1"
            android:layout_width="130dp"
            android:layout_height="210dp"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="viewImage"
            android:background="@drawable/border_file"
            android:src="@drawable/panda" />

        <ImageView
            android:id="@+id/im2"
            android:layout_width="130dp"
            android:layout_height="210dp"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="viewImage"
            android:background="@drawable/border_file"
            android:src="@drawable/cute_dog" />
        <ImageView
            android:id="@+id/im3"
            android:layout_width="130dp"
            android:layout_height="210dp"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="viewImage"
            android:background="@drawable/border_file"
            android:src="@drawable/cute_monkey" />
        <ImageView
            android:id="@+id/im4"
            android:layout_width="130dp"
            android:layout_height="210dp"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="viewImage"
            android:background="@drawable/border_file"
            android:src="@drawable/elephant" />
        <ImageView
            android:id="@+id/im5"
            android:layout_width="130dp"
            android:layout_height="210dp"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="viewImage"
            android:background="@drawable/border_file"
            android:src="@drawable/white_tiger" />
        <ImageView
            android:id="@+id/im6"
            android:layout_width="130dp"
            android:layout_height="210dp"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="viewImage"
            android:background="@drawable/border_file"
            android:src="@drawable/black_bird" />
        <ImageView
            android:id="@+id/im7"
            android:layout_width="130dp"
            android:layout_height="210dp"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="viewImage"
            android:background="@drawable/border_file"
            android:src="@drawable/yellow_bird" />
        <ImageView
            android:id="@+id/im8"
            android:layout_width="130dp"
            android:layout_height="210dp"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="viewImage"
            android:background="@drawable/border_file"
            android:src="@drawable/monkey" />
        <ImageView
            android:id="@+id/im9"
            android:layout_width="130dp"
            android:layout_height="210dp"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="viewImage"
            android:background="@drawable/border_file"
            android:src="@drawable/black_bird" />
        <ImageView
            android:id="@+id/im10"
            android:layout_width="130dp"
            android:layout_height="210dp"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="viewImage"
            android:background="@drawable/border_file"
            android:src="@drawable/tiger" />
        <ImageView
            android:id="@+id/im11"
            android:layout_width="130dp"
            android:layout_height="210dp"
            android:layout_row="3"
            android:layout_column="0"
            android:onClick="viewImage"
            android:background="@drawable/border_file"
            android:src="@drawable/tiger" />
        <ImageView
            android:id="@+id/im12"
            android:layout_width="130dp"
            android:layout_height="210dp"
            android:layout_row="3"
            android:layout_column="1"
            android:onClick="viewImage"
            android:background="@drawable/border_file"
            android:src="@drawable/cat2" />
        <ImageView
            android:id="@+id/im13"
            android:layout_width="130dp"
            android:layout_height="210dp"
            android:layout_row="3"
            android:layout_column="2"
            android:onClick="viewImage"
            android:background="@drawable/border_file"
            android:src="@drawable/dog1" />




    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>